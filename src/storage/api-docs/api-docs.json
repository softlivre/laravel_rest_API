{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel 10 REST API by Henrique Barbosa",
        "version": "0.1"
    },
    "paths": {
        "/api/comments": {
            "post": {
                "tags": [
                    "Comments"
                ],
                "summary": "Create a new comment for a task",
                "description": "Creates a new comment for a specified task. The endpoint requires task_id, user_id, and comment text as query parameters.",
                "operationId": "300619a0a4003920aafe960e45688102",
                "parameters": [
                    {
                        "name": "task_id",
                        "in": "query",
                        "description": "The ID of the task",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "user_id",
                        "in": "query",
                        "description": "The ID of the user creating the comment",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "comment",
                        "in": "query",
                        "description": "The comment text",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Comment created successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/buildings/{buildingId}/tasks": {
            "get": {
                "tags": [
                    "Tasks"
                ],
                "summary": "List tasks for a building",
                "description": "Returns a list of tasks for a specified building along with their comments. If the building does not exist, returns a 404 response with an error message.",
                "operationId": "5714a88e147a7be422b5926a1e849706",
                "parameters": [
                    {
                        "name": "buildingId",
                        "in": "path",
                        "description": "The ID of the building",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tasks retrieved successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "404": {
                        "description": "Building not found",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/api/tasks": {
            "post": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Create a new task",
                "description": "Creates a new task for a building. The task is created with a default status of 'Open'.",
                "operationId": "f803ebdb2300acdb7e93bbe8d0b9a2e8",
                "parameters": [
                    {
                        "name": "title",
                        "in": "query",
                        "description": "Title of the task",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Fix Leak in Apartment 5B"
                        }
                    },
                    {
                        "name": "description",
                        "in": "query",
                        "description": "Description of the task",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Water leak detected in the bathroom."
                        }
                    },
                    {
                        "name": "building_id",
                        "in": "query",
                        "description": "ID of the building",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "assigned_to",
                        "in": "query",
                        "description": "ID of the user assigned to the task",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 2
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Task created successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Comments",
            "description": "Comments"
        },
        {
            "name": "Tasks",
            "description": "Tasks"
        }
    ]
}
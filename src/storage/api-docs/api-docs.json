{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel 10 REST API by Henrique Barbosa",
        "version": "0.1"
    },
    "paths": {
        "/api/buildings/{buildingId}/tasks": {
            "get": {
                "tags": [
                    "Tasks"
                ],
                "summary": "List tasks for a building",
                "description": "Returns a list of tasks for a specified building along with their comments. If the building does not exist, returns a 404 response with an error message.",
                "operationId": "5714a88e147a7be422b5926a1e849706",
                "parameters": [
                    {
                        "name": "buildingId",
                        "in": "path",
                        "description": "The ID of the building",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tasks retrieved successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "404": {
                        "description": "Building not found",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/api/tasks": {
            "post": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Create a new task",
                "description": "Creates a new task for a building. The task is created with a default status of 'Open'.",
                "operationId": "f803ebdb2300acdb7e93bbe8d0b9a2e8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "building_id"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Fix Leak in Apartment 5B"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Water leak detected in the bathroom."
                                    },
                                    "building_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "assigned_to": {
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Task created successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/test": {
            "get": {
                "tags": [
                    "Test"
                ],
                "summary": "Get all users",
                "description": "Get all users",
                "operationId": "56ac917940356d77a1907b5264ce218e",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "name",
                        "required": false
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email",
                        "required": false
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page Number",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Tasks",
            "description": "Tasks"
        },
        {
            "name": "Test",
            "description": "Test"
        }
    ]
}